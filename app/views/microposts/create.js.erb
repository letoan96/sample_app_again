<% if @micropost.save %>
	$("#newpost").modal('hide');
	$('textarea#micropost_content').val('');
	$("#container_microposts").prepend('<%= j render @micropost %>');
	$("#micropost-<%= @micropost.id %>").hide().fadeIn(1000);
<% else %>
	$("#error").html('<% @micropost.errors.full_messages.each do |msg| %><li class="text-danger"><%= msg %></li><% end %>')
<% end %>
