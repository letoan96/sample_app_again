<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
      <%= render "microposts/create_button"  %>
    </section>
  </aside>
  <div class="col-md-8" >
    
      <h3>Your Microposts </h3>
      <ol class="microposts" id= "container_microposts">
        <%= render @microposts %>
      </ol>
    
  </div>
</div>